<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/spacing_generic"
    android:background="@android:color/white"
    android:clickable="false"
    android:orientation="vertical"
    android:padding="@dimen/spacing_generic"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.admin.UpdateToppingActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Topping information"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/txt_topping_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Topping name"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="@color/gray" />
    <EditText
        android:id="@+id/txt_topping_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Price"
        android:inputType="numberDecimal|numberSigned"
        android:singleLine="true"
        android:textColorHint="@color/gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw_topping_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Topping"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

</LinearLayout>