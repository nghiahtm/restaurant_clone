<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
        <TextView
            android:id="@+id/tv_title_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Add subcategory"
            android:textStyle="bold"
            android:textSize="18sp"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:gravity="center"
            tools:ignore="UnusedAttribute" />
        <EditText
            android:id="@+id/name_subcategory_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:hint="Subcategory name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

                <Switch
                    android:id="@+id/enable_subcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable subcategory"
                    android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_subcategory_color"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Color"
            android:textStyle="bold"
            android:textSize="16sp"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/white"
            android:background="@color/subcateColor"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="16dp"
            tools:ignore="UnusedAttribute" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel_btn_popup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:textColor="@color/colorAccent"
                    android:background="@color/white"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    tools:ignore="UnusedAttribute" />
                <TextView
                    android:id="@+id/add_btn_popup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Save"
                    android:textSize="16sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginStart="3dp"
                    android:background="@color/white"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    tools:targetApi="m"
                    tools:ignore="UnusedAttribute" />


        </LinearLayout>


</LinearLayout>